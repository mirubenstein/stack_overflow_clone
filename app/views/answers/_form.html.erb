<%= form_for [@question, @answer] do |f| %>

  <%= render("layouts/errors", :object => @answer) %>

  <div class="field">
    <%= f.label :answer %><br>
    <%= f.text_field :answer, :size => "50x5" %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn btn-success btn-xs") %>
  </div>
<% end %>
