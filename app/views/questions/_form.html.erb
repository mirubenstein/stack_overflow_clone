<%= form_for(@question) do |f| %>

  <%= render("layouts/errors", :object => @question) %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_area :question, :size => "50x5" %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn btn-success btn-xs") %>
  </div>
<% end %>
